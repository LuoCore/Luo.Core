<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>@ViewData["Title"] - LuoCore</title>
    <link href="~/css/site.css" rel="stylesheet" media="all" asp-append-version="true"/>
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" media="all" asp-append-version="true" />
    <link href="~/css/admin.css" rel="stylesheet" media="all" asp-append-version="true" />
    <link rel="stylesheet" href="~/Luo.Core.LayuiAdmin.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("StyleCss", required: false)
</head>
<body>

    <!--初始化加载层-->
    <div class="layuimini-loader">
        <div class="layuimini-loader-inner"></div>
    </div>
    @RenderBody()
    <script src="~/lib/layui/layui.js" asp-append-version="true"></script>



    <script src="~/layui_extend/config.js" asp-append-version="true"></script>
    <script src="~/layui_extend/view.js" asp-append-version="true"></script>
    <script src="~/layui_extend/admin.js" asp-append-version="true"></script>
    <script src="~/layui_extend/common.js" asp-append-version="true"></script>
    <script src="~/layui_extend/index.js" asp-append-version="true"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
